<!-- *Asterisks* denote exotic specializations -->
<chummer>
	<skillgroups>
		<name amendoperation="addnode">Piloting</name>
		<name amendoperation="addnode">Astral</name>
		<name amendoperation="addnode">Biotech</name>
	</skillgroups>
	<skills>
		<skill>
			<name>Gymnastics</name>
			<specs amendoperation="replace">
				<spec>Balance</spec>
				<spec>Climbing</spec>
				<spec>Dance</spec>
				<spec>Dodging</spec>
				<spec>Free-Fall</spec>
				<spec>Leaping</spec>
				<spec>Parkour</spec>
				<spec>Rappelling</spec>
				<spec>Rolling</spec>
			</specs>
		</skill>
		<skill>
			<name>Palming</name>
			<default>True</default>
		</skill>
		<skill>
			<name>Unarmed Combat</name>
			<specs amendoperation="replace">
				<spec>Blocking</spec>
				<spec>Cyber Implants</spec>
				<spec>*Frog Tongue</spec>
				<spec>*Garrote</spec>
				<spec>*Goring Horns</spec>
				<spec>*Oral Slasher</spec>
				<spec>*Proboscis</spec>
				<spec>*Quills</spec>
				<spec>Subduing Combat</spec>
				<spec>*Thagomizer Tail</spec>
				<spec>[Martial Art]</spec>
			</specs>
		</skill>
		<skill>
			<name>Swimming</name>
			<specs amendoperation="replace">
				<spec>Diving</spec>
				<spec>Dash</spec>
				<spec>Long Distance</spec>
				<spec>Underwater Combat</spec>
			</specs>
		</skill>
		<skill>
			<name>Leadership</name>
			<specs amendoperation="replace">
				<spec>Command</spec>
				<spec>Direct</spec>
				<spec>Inspire</spec>
				<spec>Instruction</spec>
				<spec>Rally</spec>
			</specs>
		</skill>
		<skill>
			<name>Pilot Aircraft</name>
			<skillgroup amendoperation="replace">Piloting</skillgroup>
		</skill>
		<skill>
			<name>Pilot Ground Craft</name>
			<skillgroup amendoperation="replace">Piloting</skillgroup>
			<specs amendoperation="replace">
				<spec>Bike</spec>
				<spec>Hovercraft</spec>
				<spec>Tracked</spec>
				<spec>Wheeled</spec>
				<spec>Biped</spec>
				<spec>Multiped</spec>
				<spec>Quadruped</spec>
				<spec>Remote Operation</spec>
			</specs>
		</skill>
		<skill>
			<name>Pilot Watercraft</name>
			<skillgroup amendoperation="replace">Piloting</skillgroup>
		</skill>
		<skill>
			<name>Pilot Aerospace</name>
			<skillgroup amendoperation="replace">Piloting</skillgroup>
		</skill>
		<skill>
			<name>Astral Combat</name>
			<skillgroup amendoperation="replace">Astral</skillgroup>
		</skill>
		<skill>
			<name>Assensing</name>
			<skillgroup amendoperation="replace">Astral</skillgroup>
		</skill>
		<skill>
			<name>Arcana</name>
			<skillgroup amendoperation="replace">Astral</skillgroup>
		</skill>
		<skill>
			<name>First Aid</name>
			<skillgroup amendoperation="replace">Biotech</skillgroup>
		</skill>
		<skill>
			<name>Chemistry</name>
			<skillgroup amendoperation="replace">Biotech</skillgroup>
		</skill>
		<skill>
			<name>Medicine</name>
			<skillgroup amendoperation="replace">Biotech</skillgroup>
		</skill>
		<skill>
			<name>Biotechnology</name>
			<skillgroup amendoperation="replace">Biotech</skillgroup>
		</skill>
		<skill>
			<name>Cybertechnology</name>
			<skillgroup amendoperation="replace">Biotech</skillgroup>
		</skill>
		<skill xpathfilter="name = 'Free-Fall'" amendoperation="remove" />
		<skill xpathfilter="name = 'Diving'" amendoperation="remove" />
		<skill xpathfilter="name = 'Pilot Walker'" amendoperation="remove" />
		<skill xpathfilter="name = 'Instruction'" amendoperation="remove" />
	</skills>
</chummer>
